{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext"],
    "noEmitOnError": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules/"
  ]
}
